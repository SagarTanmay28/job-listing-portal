<!DOCTYPE html>
<html>
<head>
  <title>Employer Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <div class="top-bar">
      <div>
        <h2>Employer Dashboard</h2>
        <p>Welcome Employer</p>
      </div>
      <a href="/jobs/create"><button>Create Job Listing</button></a>
    </div>

    <table class="table">
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Applicants</th>
      </tr>

      <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.location %></td>
          <td>0 Applications</td>
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
